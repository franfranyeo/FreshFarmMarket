@page
@model 			ChangePasswordModel
@{
	ViewData["Title"] = "Change Password";
}

<h2>Change Password</h2>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="ChangePassModel.OldPassword"></label>
        <input asp-for="ChangePassModel.OldPassword" class="form-control" />
        <span asp-validation-for="ChangePassModel.OldPassword" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ChangePassModel.NewPassword"></label>
        <input asp-for="ChangePassModel.NewPassword" class="form-control" />
        <span asp-validation-for="ChangePassModel.NewPassword" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ChangePassModel.ConfirmPassword"></label>
        <input asp-for="ChangePassModel.ConfirmPassword" class="form-control" />
        <span asp-validation-for="ChangePassModel.ConfirmPassword" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Change Password</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}